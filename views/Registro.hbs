<body>
    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Registro</h2>
      <hr class="w-50" />

      <form id="formulario">
        <div class="form-group row w-50 m-auto">
          <div class="form-group col-12 col-sm-6">
            <label>Email</label>
            <input class="form-control m-auto" name="email"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Nombre</label>
            <input class="form-control m-auto" name="nombre"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Password</label>
            <input class="form-control m-auto" name="password" type="password" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Repita la password</label>
            <input class="form-control m-auto" type="password" />
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Años de experiencia</label>
            <input class="form-control m-auto" name="anos_experiencia"/>
          </div>
          <div class="form-group col-12 col-sm-6">
            <label>Especialidad</label>
            <input class="form-control m-auto" name="especialidad"/>
          </div>
          <div class="form-group col-12 col-sm-12">
            <label>Foto de perfil</label>
            <input type="file" id="file" name="foto"/>
          </div>
        </div>
        <button class="btn btn-info mb-3" id="registerButton">Registrarme</button>
        <p><a href="/login"> Iniciar sesión</a></p>
      </form>
    </div>

    <script>
        const formulario = document.getElementById("formulario")
        $(formulario).on("submit",e=>e.preventDefault())
        $("#registerButton").on("click",async ()=>{
        const formData = new FormData(formulario);                   
        const imagefile = document.querySelector('#file');        
        formData.append("imagen", imagefile.files[0]);       
        const {data} = await axios.post('/api/v1/skaters', formData, {
            headers: {
            'Content-Type': 'multipart/form-data'
            }
        })
        alert("registrado exitosamente")
        })
    </script>